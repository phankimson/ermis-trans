
{% extends 'manage.layouts.ermisform1-u' %}
{% block content_add %}
    <div id="notification"></div>
    <table>
        <tr>
            <td class="row-label"><label>{{ antl.get('attach_file.subject_key') }}</label></td>
            <td>
            <select class="droplist large" data-title="{{ antl.get('attach_file.subject_key') }}" data-position="1" data-template="#= FormatDropList(subject_key,'subject_key') #" data-width="200px" data-type="number" name="subject_key">
                <option readonly selected value="0">--Select--</option>
                <option value="customer">{{ antl.get('customer.title') }}</option>
            </select>
            </td>
        </tr>
        <tr>
            <td><label>{{ antl.get('attach_file.subject') }}</label></td>
            <td class="row-height">
                <select class="droplist large" data-title="{{ antl.get('attach_file.subject') }}" data-position="2" data-template="#= FormatDropList(subject,'subject') #" data-width="200px" data-type="number" name="subject">
                    <option readonly selected value="0">--Select--</option>
                        {% for x in subject %}
                        <option value="{{ x.id }}">{{ x.code }} - {{x.name}}</option>
                        {% endfor %}
                </select>
            </td>
        </tr>
        <tr>
            <td class="row-label"><label>{{ antl.get('global.name') }}</label></td>
            <td class="row-height">
              <input type="text" class="k-textbox medium" data-position="4" data-title="{{ antl.get('global.name') }}" data-width="200px"  name="name" />
            </td>
        </tr>
        <tr>
            <td class="row-label"><label>{{ antl.get('customer.files') }}</label></td>
            <td class="row-height">
                <form id="image-form" enctype="multipart/form-data" role="form" method="post">
                <input data-position="3" data-title="{{ antl.get('customer.files') }}" data-template="#= FormatDownloadFiles(file) #"  data-width="100px"  name="file" id="image" type="file" aria-label="files" />
                </form>
            </td>
        </tr>
    </table>
    {% endblock %}
    {% block scripts_add %}
        <script>
        jQuery(document).ready(function () {
            Ermis.data = {{ data | json | safe }};
            Ermis.per = JSON.parse('{{ permission | safe }}');
            Ermis.flag = 1;
            Ermis.link = "{{ key }}";
            Ermis.room = "{{ room }}";
        });
        </script>
    {% endblock %}
