{% extends 'manage.layouts.ermisform8' %}
{% block css_add %}
<title>{{  shortif( inventory , inventory.name + ' - ' + company.name , antl.get('index.title') ) }}</title>
{% endblock %}

{% block content_add %}
    <div class="uk-grid" id="form-search">
        <div class="uk-width-medium-1-4">

        </div>
        <div class="width-large">
        <table>

            <tr>
            <td><label class="row-padding-right-small">{{ antl.get('report_list_customer.sales') }}</label></td>
            <td>
            <select class="droplist xlarge" name="sales">
              <option readonly selected value="">--Select--</option>
                {% for x in sales %}
                <option value="{{ x.id }}">{{ shortif( lang == 'vn' , x.name , x.name_en )}}</option>
                {% endfor %}
            </select>
            </td>
            </tr>

        </table>

            <div class="row-padding-bottom-small"></div>
            <div>
                <a href="javascript:;" class="k-button uk-alert-success row-padding-bottom-small get_report" data-uk-tooltip=""><i class="md-18 material-icons md-color-white">event_note</i>{{ antl.get('global.report') }}</a>
                <a href="javascript:;" class="k-button k-primary row-padding-bottom-small get_data" data-uk-tooltip=""><i class="md-18 material-icons md-color-white">event_available</i>{{ antl.get('global.get_data') }}</a>
                <a href="javascript:;" class="k-button uk-alert-warning btn-hide" data-uk-tooltip=""><i class="md-18 material-icons md-color-white">exit_to_app</i>{{ antl.get('global.hidden_condition') }}</a>
            </div>

        </div>
        <div class="uk-width-medium-1-4">

        </div>

    </div>
    <div class="uk-grid">
        <div class="uk-width-medium-4-4">
            <div id="grid" style="display:none"></div>
        </div>
    </div>
<div class="uk-grid">
    <div class="uk-width-medium-4-4">
        <div id="report" style="display:none">
            <div class="row">
                <h3 id="title" class="text-center"></h3>
                <table id="table"
                       data-toggle="table"
                       data-show-export="true"
                       data-pagination="true"
                       data-click-to-select="true"
                       data-toolbar="#toolbar"
                       data-search="true"
                       data-show-footer="true"
                       data-show-refresh="true"
                       data-show-toggle="true"
                       data-show-print="true"
                       data-show-columns="true">
                    <thead>
                    <tr>
                      <th data-formatter="runningFormatter" >#</th>
                      <th data-field="code" data-sortable="true">{{ antl.get('global.code') }}</th>
                      <th data-field="name" data-sortable="true" >{{ antl.get('global.name') }}</th>
                      <th data-field="address" data-sortable="true" >{{ antl.get('customer.address') }}</th>
                      <th data-field="tax_code" data-sortable="true" >{{ antl.get('customer.tax_code') }}</th>
                      <th data-field="phone" data-sortable="true" >{{ antl.get('customer.phone') }}</th>
                      <th data-field="email" data-sortable="true" >{{ antl.get('customer.email') }}</th>
                      <th data-field="website" data-sortable="true" >{{ antl.get('customer.website') }}</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
    {% block scripts_add %}
    <script>
        jQuery(document).ready(function () {
        Ermis.per = JSON.parse('{{ permission | safe }}');
        Ermis.link = "{{ key }}";
        Ermis.room = "{{ room }}";
        Ermis.columns    =   [{ "field" : "code","title" :"{{ antl.get('global.code') }}" ,"width" : "150px"},
                              { "field" : "name","title" :"{{ antl.get('global.name') }}" ,"width" : "150px"},
                              { "field" : "address","title" :"{{ antl.get('customer.address') }}" ,"width" : "150px"},
                              { "field" : "tax_code","title" :"{{ antl.get('customer.tax_code') }}" ,"width" : "150px"},
                              { "field" : "phone","title" :"{{ antl.get('customer.phone') }}" ,"width" : "150px"},
                              { "field" : "email","title" :"{{ antl.get('customer.email') }}" ,"width" : "150px"},
                              { "field" : "website","title" :"{{ antl.get('customer.website') }}" ,"width" : "150px"}];
        });
    </script>
    {% endblock %}
